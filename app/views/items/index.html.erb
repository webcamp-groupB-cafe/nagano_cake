<div class="container">
  <div class="row">

      <h2>商品一覧</h2><p>(全<%= @items.count %>件)</p>
      <div>
        <%=  @items.each do |item| %>
          <%= item_tag item.image(250,300) %>
          <%= link_to item.name, item_path(item.id)  %>
          <p>￥<%= item.with_tax_price.to_i %></p>
        <% end %>
      </div>
  </div>
</div>
