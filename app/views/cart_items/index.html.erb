
<h4>ショッピングカート</h4>
<%= link_to "カートを空にする", all_destroy_cart_items_path, method: :delete,class: "btn btn-danger btn-sm" %>
<table>
   <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
   </tr>
     <% total = 0 %>　

 <% if current_member.cart_items.present? %> 
    <% @cart_items.each do |cart_item| %> 
     <tr>
       <td>
         <%= attachment_image_tag(cart_item.item, :image, size: "60x50", fallback: "no_cake.jpg") %> 
         <%= cart_item.item.name %> 
       </td>
       <td><%= cart_item.with_tax_price.to_i %></td>　
       <td>
         <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true, method: :patch do |f| %>
           <%= f.number_field :amount, min: 1, max:10, id: "amount_cart"%>
           <%= f.submit "変更",class: "btn btn-success" %> 
         <% end %>
       </td>
       <td>
         <%= cart_item.subtotal %> 
       </td>
       <td>
         <%= link_to "商品をカートから削除する", cart_item_path(cart_item.id, cart_item), method: :delete,class: "btn btn-danger" %>
       </td>
     </tr>
       <% total += subtotal %>
     <% end %>
<% end %>
   <tr>    
    <th>合計金額</th>
    <td><%= total %></td>
   </tr>