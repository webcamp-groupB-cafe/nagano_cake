<div class="container">
  <div class="row">
    <h3 class="my-5">Genre List/Addition</h3>
  </div>
  <div class="col-md-8">

  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>

  <div class="row">
    <div class="col-md-3">
      <%= f.label:"ジャンル名" %>
    </div>
    <div class="col-md-5">
      <%= f.text_field :name %>
    </div>
    <div class="col-md-4">
      <%= f.submit '新規登録', class:"btn btn-outline-success rounded-pill" %>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="col-md-7">

    <table class="table">
      <thead>
        <tr class="table-active">
          <th colspan="3">ジャンル</th>
        </tr>
        </thead>
        <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td></td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-outline-success rounded-pill" %>
            </td>
          </tr>
        </tbody>
        <% end %>
    </table>
    </div>
  </div>
  </div>
  <div class="col-md-4"></div>
</div>