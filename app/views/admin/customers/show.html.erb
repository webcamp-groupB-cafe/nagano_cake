<div class="container">
  <h3><%= @customer.first_name+@customer.last_name %>さんの会員詳細</h3>

  <table class="table table-borderless table-sm">
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @customer.first_name+"  "+@customer.last_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.first_name_kana+"  "+@customer.last_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
        <% if @customer.is_active == true %>
          <p class="text-success"><strong>有効</strong></p>
        <% else %>
          <p class="text-muted"><strong>退会</strong></p>
        <% end %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %></td>
      <td><%= link_to "注文履歴一覧を見る", admin_orders_path(@customer.id), class: "btn btn-primary" %></td>
    </tr>
  </table>
  <div
</div>

