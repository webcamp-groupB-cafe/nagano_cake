<div class="container p-3">
  <div class="row">

 
  <div class="col-md-12">
    <h3>注文履歴一覧</h3>
    <table class="table">
      <tr>
        <td>注文日</td>
        <td>配送先</td>
        <td>注文商品</td>
        <td>ステータス</td>
      </tr>
     <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= order.address %></td>
      <td>
        <ul class="list-unstyled">
          <% order.order_details.each do |order_detail|  %>
            <li><%= order_detail.item.name %></li>
          <% end %>
        </ul>
      </td>
      <td><%= order.status_i18n %></td>
    </tr>
    <% end %>
    </table>

  </div>


  </div>
</div>



  </div>

  </div>
</div>