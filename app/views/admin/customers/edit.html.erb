<div class="container">
    <div class="mx-auto">
      <h4 class="my-5"><%= @customer.first_name+@customer.last_name %>さんの会員情報編集</h4>

        <div class="row">
          <div class="col-4">
            会員ID
          </div>
          <div class="col-4">
            <%= @customer.id %>
          </div>
          <div class="col-4">
          </div>
        </div>
        <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
        <div class="row">
          <div class="col-4">
            <%= f.label:"氏名" %>
          </div>
          <div class="col-4">
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
          <div class="col-4">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-4">
            <%= f.label:"フリガナ" %>
          </div>
          <div class="col-4">
            <%= f.text_field :first_name_kana, class: "form-control" %>
          </div>
          <div class="col-4">
            <%= f.text_field :last_name_kana, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-4">
            <%= f.label:"郵便番号" %>
          </div>
          <div class="col-4">
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
          <div class="col-4">
          </div>
        </div>

        <div class="row">
          <div class="col-4">
            <%= f.label:"住所" %>
          </div>
          <div class="col-7">
            <%= f.text_field :address, class: "form-control" %>
          </div>
          <div class="col-1">
          </div>
        </div>

        <div class="row">
          <div class="col-4">
            <%= f.label:"電話番号" %>
          </div>
          <div class="col-4">
            <%= f.text_field :telephone_number, class: "form-control" %>
          </div>
          <div class="col-4">
          </div>
        </div>

        <div class="row">
          <div class="col-4">
            <%= f.label:"メールアドレス" %>
          </div>
          <div class="col-4">
            <%= f.text_field :email, class: "form-control" %>
          </div>
          <div class="col-4">
          </div>
        </div>

        <div class="row">
          <div class="col-4">
            <%= f.label:is_active, "会員ステータス" %>
          </div>
          <div class="col-4">
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効", { value: :true }  %>

          </div>
          <div class="col-4">
            <%= f.radio_button :is_active, :false  %>
            <%= f.label :is_active, "退会", { value: :false } %>
          </div>
        </div>

        <div class="row">
          <div class="col-4">
          </div>
          <div class="col-4">
            <%= f.submit "編集内容を保存", class:"btn btn-outline-success rounded-pill" %>
          </div>
          <div class="col-4">
          </div>
        </div>

      <% end %>

</div>
