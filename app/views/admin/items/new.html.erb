<div class="container">
  <div class="row">
    <h3>商品新規登録</h3>
      <div class="mx-auto">

        <%= form_with model: [:admin, @item], local: true do |f| %>
        <div class="form-group row">
          <%= f.label :image, '商品画像', class: 'col-sm-3 col-form-label' %>
        <div class="col-sm-9">
          <%= f.file_field :image, class: 'form-control' %>
        </div>
        </div>
        <div class="form-group row">
          <%= f.label :name, '商品名', class: 'col-sm-3 col-form-label' %>
        <div class="col-sm-9">
          <%= f.text_field :name, placeholder:"商品名", class: 'form-control' %>
        </div>
        </div>
        <div class="form-group row">
          <%= f.label :introduction, '商品説明', class: 'col-sm-3 col-form-label' %>
        <div class="col-sm-9">
          <%= f.text_area :introduction, placeholder:"ここに説明文を記述します", class: 'form-control' %>
        </div>
        </div>

        <div class="form-group row">
          <%= f.label :price, '税抜価格', class: 'col-sm-3 col-form-label' %>
        <div class="col-sm-9 input-group">
          <%= f.number_field :price, placeholder:"1000", class: 'form-control' %>
        <div class="input-group-append">
          <span class="input-group-text">円</span>
        </div>
        </div>
        </div>
        
        
        <% end %>
      </div>
  </div>
</div>