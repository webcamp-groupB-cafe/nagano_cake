<div class="container">
  <h3>検索結果一覧</h3>
  <div class="row">
    <% if @items.present? %>
    <table class="table">
      <thead>
        <tr>
            <th>商品名</th>
            <th>商品説明</th>
            <th>税込価格(税抜価格)</th>
            <th>ジャンル</th>
            <th>販売ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.name %><br>
            <% if item.image.attached? %>
            <%= image_tag item.image, style: 'width: 200px; height: 150px' %>
            <% else %>
            <%= image_tag 'no_cake', style: 'width: 200px; height: 150px' %>
            <% end %>
           </td>
          <td><%= item.introduction %></td>
          <td><%= item.with_tax_price.to_s(:delimited) %>(<%= item.price.to_s(:delimited) %>) 円</td>
          <td><%= item.genre ?  item.genre.name : 'ジャンルが設定されていません' %></td>
          <td>
            <% if item.is_active %>
                <p class="text-success"><strong>販売中</strong></p>
              <% else %>
                <p class="text-muted"><strong>販売停止中</strong></p>
              <% end %>
          </td>
        </tr>
      </tbody>
        <% end %>
    </table>
    <% else %>
    <p>商品が見つかりませんでした</p>
    <% end %>
  </div>
  <%= paginate @items, theme: 'twitter-bootstrap-4' %>
</div>
