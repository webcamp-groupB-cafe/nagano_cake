<div class="container">
  <div class="row">

      <h2>商品一覧</h2><p>(全<%= @items.count %>件)</p>
      
      <div class="card-deck">
        <%  @items.each do |item| %>
          <div class="card shadow-sm cake-box text-center" style="max-width: 230px;">
            <div class="card-img-top" >
            <%= link_to item_path(item.id) do %>
              <% if item.image.attached? %>
                <%= image_tag item.image, style: 'width: 100%; height: 150px' %>
              <% else %>
                <%= image_tag 'no_cake', style: 'width: 100%; height: 150px' %>
              <% end %><br>
              </div>
              <h5 class="card-title pt-2">
                <%= item.name %>
              </h5>
            <% end %>
            <div class="card-text">
              <p>￥<%= item.with_tax_price.to_i %></p>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>
