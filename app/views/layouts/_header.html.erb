<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand"><img src="/assets/naganocake.jpg" ></a>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

        <% if customer_signed_in? %>
         <div class="row mx-auto">ようこそ、<%= current_customer.last_name %>さん！</div>
          <li>
            <%= link_to "マイページ", customers_my_page_path, class: 'btn btn-light nav-link' %>
          </li>
          <li>
            <%= link_to "商品一覧", items_path, class: 'btn btn-light nav-link' %>
          </li>
          <li>
            <%=  link_to "カート", cart_items_path, class: 'btn btn-light nav-link' %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link btn btn-light' %>
          </li>

          <li class="nav-item">
            <div class="search_form">
              <%= form_with url: search_path, local: true, method: :get do |f| %>
                <%= f.text_field :word, class: "form-control" %>
                <%= f.hidden_field :range, value: "商品"%>
                <%= f.hidden_field :search, value: "partial"%>
                <%= f.submit "Search" %>
              <% end %>
            </div>
          </li>

        <% elsif admin_signed_in? %>
          <div class="row mx-auto">ようこそ、管理者さん！</div>
          <li>
            <%= link_to "商品一覧", admin_items_path, class: 'btn btn-light nav-link' %>
          </li>
          <li>
            <%= link_to "会員一覧", admin_customers_path, class: 'btn btn-light nav-link' %>
          </li>
          <li>
            <%=  link_to "注文履歴一覧", admin_root_path, class: 'btn btn-light nav-link' %>
          </li>
          <li>
            <%=  link_to "ジャンル一覧", admin_genres_path, class: 'btn btn-light nav-link' %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link btn btn-light' %>
          </li>

          <li class="nav-item">
            <div class="search_form">
              <%= form_with url: admin_search_path, local: true, method: :get do |f| %>
                <%= f.text_field :word, class: "form-control" %>
                <%= f.select :range, options_for_select({ "会員" => "customer", "商品" => "item" }) %>
                <%= f.hidden_field :search, value: "partial"%>
                <%= f.submit "Search" %>
              <% end %>
            </div>
          </li>

        <% else %>
          <li>
            <%= link_to "About", about_path, class: 'btn btn-light nav-link ' %>
          </li>
          <li>
            <%= link_to "商品一覧", items_path, class: 'btn btn-light nav-link ' %>
          </li>
          <li>
            <%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-light nav-link' %>
          </li>
          <li>
            <%= link_to "ログイン", new_customer_session_path, class: 'btn btn-light nav-link' %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>