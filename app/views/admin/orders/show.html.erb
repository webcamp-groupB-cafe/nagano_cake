<div class="container">
    <div class="mx-auto">
      <h1>注文履歴詳細</h1>
     <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
      <table class="table">
        <tr>
          <td>購入者</td>
          <!--URLをしらべて入れる-->
          <td><%= link_to @order.first_name+"  "+@customer.last_name  %></td>
        </tr>
        <tr>
          <td>注文日</td>
          <td><%= l @order.created_at %></td>
        </tr>
      <tr>
        <td>配送先</td>
        <td><%= @order.postal_code%><%= @order.address %><%= @order.name %></td>
      </tr>
      <tr>
       <td>支払い方法</td>
       <td><%= @order.payment_method_i18n%></td>
      </tr>
      <tr>
       <td>注文ステータス</td>
       <td>

       </td>
      </tr>
    </table>
    <% end %>
  </div>
</div>